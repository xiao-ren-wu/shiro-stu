<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.ywb.shirostudy.dao.PermissionMapper" >

    <select id="findPermissionByRoleName" resultType="java.lang.String">
        select permission
        from roles_permissin
        where role_name = #{roleName}
    </select>
</mapper>